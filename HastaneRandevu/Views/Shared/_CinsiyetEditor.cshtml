@model IList<HastaneRandevu.ViewModels.CinsiyetRadioBox>
<div class="panel panel-default">
    <div class="panel-heading">Cinsiyet</div>
    <div class="panel-body">
        <div class="list-group">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="list-group-item" style="margin-left:70px">
                    @Html.Hidden("Cinsiyet[" + i + "].Id", Model[i].Id)
                    <label for="Cinsiyet_@(i)__IsChecked">
                        @Html.RadioButton(@*"cinsiyet",*@"Cinsiyet[" + i + "].IsChecked", Model[i].IsChecked)
                        @Model[i].Name
                    </label>
                </div>
            }
        </div>
    </div>
</div>
