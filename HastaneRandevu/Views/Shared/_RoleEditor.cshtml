
@model IList<HastaneRandevu.ViewModels.RoleCheckBox>
<div class="panel panel-default">
    <div class="panel-heading">Roles</div>
    <div class="panel-body">
        <div class="list-group">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="list-group-item" style="margin-left:70px">
                    @Html.Hidden("Roles[" + i + "].Id", Model[i].Id)
                    <label for="Roles_@(i)__IsChecked">
                        @Html.CheckBox("Roles[" + i + "].IsChecked", Model[i].IsChecked)
                        @Model[i].Name
                    </label>
                </div>
            }
        </div>
    </div>
</div>
