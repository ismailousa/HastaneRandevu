@model HastaneRandevu.Areas.Admin.ViewModels.UsersList

@{
    ViewBag.Title = "Index";
}

@Html.Partial("_Header1")

<div class="btn-toolbar">
    @Html.Partial("_Header2")
    <div class="btn-group pull-right">
        @if (Model.Users.HasPreviousPage)
        {
            <a href="@Url.Action("index",new { page=Model.Users.PreviousPage})" class="btn btn-primary btn-sm">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Önceki Sayfa
            </a>
        }
        else
        {
            <a href="#" class="btn btn-default disabled btn-sm">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Önceki Sayfa
            </a>
        }
        @if (Model.Users.HasNextPage)
        {
            <a href="@Url.Action("index",new { page=Model.Users.NextPage})" class="btn btn-primary btn-sm">

                Sonraki Sayfa <i class="glyphicon glyphicon-chevron-right"></i>
            </a>
        }
        else
        {
            <a href="#" class="btn btn-default disabled btn-sm">

                Sonraki Sayfa <i class="glyphicon glyphicon-chevron-right"></i>
            </a>
        }
    </div>
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Kimlik No</th>
                <th>Ad Soyad</th>
                <th>Rol</th>
                <th>Klinik</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model.Users)
            {
                <tr>
                    <td>@user.KimlikNo</td>
                    <td>@user.AdSoyad</td>
                    <td>@user.Rol</td>
                    <td>@user.Klinik</td>
                    <td>
                        <div class="btn-group">
                            <a href="@Url.Action("UserDuzenle",new {user.Id })" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-edit"></i>Düzenle</a>
                            <a href="@Url.Action("UserSil",new {user.Id })" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-erase"></i>Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


