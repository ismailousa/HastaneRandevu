@model HastaneRandevu.Areas.Admin.ViewModels.KlinikNew
@{
    ViewBag.Title = "KlinikEkle";
}

<h2>@(Model.isNew ? "Klinik Ekleme" : "Klinik Duzenleme")</h2>

@using (Html.BeginForm("KlinikEkle", "Home"))
{
@Html.ValidationSummary()
    @Html.HiddenFor(x => x.Id)

<div class="form-group">
    @Html.LabelFor(x => x.KlinikAdi, "Klinik Adi")
    @Html.TextBoxFor(x => x.KlinikAdi, new { @class = "form-control" })
</div>

<input type="submit" value=@(Model.isNew ? "Ekle" : "Duzenle") class="btn btn-primary" />
<a href="@Url.Action("klinikler")">ya da Vazgeç</a>
}

