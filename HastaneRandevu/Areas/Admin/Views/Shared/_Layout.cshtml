@using System.Web.Optimization
@{
    Layout = null;
}

@helper SelectedTabClass(string tabName)
{
if (ViewBag.SelectedTab == tabName)
{
        @:active
}
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hastane Randevu</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    @Styles.Render("~/styles")
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <ul class="nav nav-pills">
                <li class="@SelectedTabClass("Home")">
                    @Html.ActionLink("Home", "Index", "Home", new { area = "Admin" }, new { @class = "navbar-brand" })
                </li>

                <li class="@SelectedTabClass("HesapBilgisi")">
                    @Html.ActionLink("Hesap Bilgisi", "Index", "HesapBilgisi", new { area = "Admin" }, new { @class = "navbar-brand" })
                </li>

                <li class="pull-right">
                    @Html.ActionLink("Çıkıs", "Logout", "Auth", new { area = "" }, new { @class = "navbar-brand" })
                </li>

                <li class="pull-right">
                    @Html.ActionLink("Randevularım", "Index", "Home", new { area = "Hasta" }, new { @class = "navbar-brand" })
                </li>

            </ul>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hastanemiz....</p>
        </footer>
    </div>

    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>*@
    @Scripts.Render("~/scripts")
</body>
</html>